<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout_train_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/relativelayout_train_set"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/material_toolbar_train_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dumbbell"
            app:subtitleTextColor="@color/white"
            app:menu="@menu/train_list_toolbar_menu">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/textview_toolbar_tilte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/toolbar_title"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:typeface="serif"/>
                <TextView
                    android:id="@+id/textview_toolbar_subtilte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/toolbar_title"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:typeface="serif"/>

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

